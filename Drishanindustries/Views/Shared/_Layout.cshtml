<!DOCTYPE html>
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/css/Admin/devextreme/dx.common.css" rel="stylesheet" />
    <link href="~/css/Admin/devextreme/dx.light.css" rel="stylesheet" />
    <link href="~/lib/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="~/js/Admin/devextreme/jquery.js"></script>
    <script src="~/js/Admin/devextreme/bootstrap.js"></script>

    <script src="~/js/Admin/devextreme/cldr.js"></script>
    <script src="~/js/Admin/devextreme/cldr/event.js"></script>
    <script src="~/js/Admin/devextreme/cldr/supplemental.js"></script>
    <script src="~/js/Admin/devextreme/cldr/unresolved.js"></script>

    <script src="~/js/Admin/devextreme/globalize.js"></script>
    <script src="~/js/Admin/devextreme/globalize/message.js"></script>
    <script src="~/js/Admin/devextreme/globalize/number.js"></script>
    <script src="~/js/Admin/devextreme/globalize/currency.js"></script>
    <script src="~/js/Admin/devextreme/globalize/date.js"></script>

    @* JSZip for client side export *@
    <script src="~/js/Admin/devextreme/jszip.js"></script>

    <script src="~/js/Admin/devextreme/dx.all.js"></script>

    <script src="~/Scripts/Account/config.js"></script>

    <script src="~/lib/assets/libs/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/js/Admin/devextreme/vectormap-data/world.js"></script>
    <script src="~/js/Admin/devextreme/aspnet/dx.aspnet.data.js"></script>
    <script src="~/js/Admin/devextreme/aspnet/dx.aspnet.mvc.js"></script>
    <link href="~/img/Admin/img/logo/logo.png" rel="icon">
    <title> @ViewData["Title"]</title>
    <link href="~/lib/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/css/admin/ruang-admin.css" rel="stylesheet">
    <link href="~/lib/vendor/fancybox/jquery.fancybox.min.css" rel="stylesheet" type="text/css">
</head>
<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-light accordion" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-action="Index" asp-controller="Dashboard">
                @*    <div class="sidebar-brand-icon">
                <img src="~/img/Admin/img/logo/logo2.png">
                </div> *@
                <div class="sidebar-brand-text mx-3">@Drishanindustries.Common.Common.AppName</div>
            </a>
            <hr class="sidebar-divider my-0">
            <li class="nav-item active">
                <a class="nav-link" asp-action="Index" asp-controller="Dashboard">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li> 
            <hr class="sidebar-divider">
            <div class="sidebar-heading">
                Features
            </div>
            @await Component.InvokeAsync("AdminMenuComponent", "AdminMenu")
            <hr class="sidebar-divider" />
            <li class="nav-item">
                <div id="collapsePageLogOut" class="collapse" aria-labelledby="headingBootstrap">
                    <div class="bg-white py-2 collapse-inner rounded">
                    </div>
                </div>
            </li>
        </ul>
        <!-- Sidebar -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- TopBar -->
                <nav class="navbar navbar-expand navbar-light bg-navbar topbar mb-4 static-top">
                    <button id="sidebarToggleTop" class="btn btn-link rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                </nav>
                <!-- Topbar -->
                <!-- Container Fluid-->
                <!---Container Fluid-->
            </div>
            <!-- Footer -->
            @RenderBody()

            <!-- Footer -->
        </div>

    </div>
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>
                    Copyright &copy; @DateTime.Now.Year - <b><a href="@Drishanindustries.Common.Common.AppUrl.ToString()" target="_blank">@Drishanindustries.Common.Common.AppName.ToString()</a></b>
                </span>
            </div>
        </div>

    </footer>
    <!-- Scroll to top -->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="~/lib/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/lib/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/lib/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/lib/assets/js/lang/jquery.multiLanguage.js"></script>

    <script src="~/js/Admin/bootstrap.min.js"></script>
    <script src="~/js/Admin/bootsnav.js"></script>
    <script src="~/js/Admin/ajaxchimp.js"></script>
    <script src="~/js/Admin/ajaxchimp-config.js"></script>
    <script src="~/js/Admin/script.js"></script>
    <script src="~/js/Admin/moment.min.js"></script>
    <script src="~/js/Admin/daterangepicker.js"></script>
    <script src="~/js/Admin/bootstrap-datetimepicker.js"></script>
    <script src="~/js/Admin/select2.full.min.js"></script>    
    <script src="~/js/Admin/icheck.min.js"></script>
    <script src="~/js/Admin/jquery.slimscroll.min.js"></script>

    <script src="~/js/Admin/site.js" asp-append-version="true"></script>
    <script src="~/css/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/js/admin/ruang-admin.min.js"></script> 
    <link href="~/lib/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            var varFirstName = '@HttpContextAccessor.HttpContext.Session.GetString("UserName")';
            varFirstName = varFirstName.replace("&quot;", " ");
            varFirstName = varFirstName.replace("&quot;", "");
            $("#txtFirstName").html(varFirstName);
        });
    </script>
</body>

</html>