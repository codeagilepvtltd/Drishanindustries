@using DevExtreme.AspNet.Mvc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductCataLog.Lib.ViewModels.LoginMasterViewModel
@{
    ViewData["Title"] = string.Format(Drishanindustries.Common.Common.PageName, Drishanindustries.Common.Common.AppName, "Users");
}

<div class="container-fluid" id="container-wrapper">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <form class="user" asp-controller="Account" asp-action="Save_LoginMaster" method="post" id="frmUsers" novalidate>
                        @* <form class="needs-validation" method="post" id="frmUsers" novalidate> *@
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>User Name:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="text" tabindex="1" class="form-control" id="txtUserName" asp-for="login_Master.varUserName" placeholder="User Name" tabindex="1">
                                </div>
                            </div>


                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Password:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="password" tabindex="2" class="form-control" id="txtpassword" asp-for="login_Master.varPassword" placeholder="Password">
                                </div>
                            </div>


                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Mobile No:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="number" tabindex="3" class="form-control" maxlength="10" id="txtMobileNo" asp-for="login_Master.varMobileNo" placeholder="Mobile No">
                                </div>
                            </div>
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Email ID:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="text" tabindex="4" class="form-control" id="txtEmailid" asp-for="login_Master.varEmailID" placeholder="Email ID">
                                </div>
                            </div>

                        </div>
                        <div class="form-group row">

                            <label for="inputEmail3" class="col-sm-2 col-form-label" >Status:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="checkbox" tabindex="5" id="chkStatus" asp-for="login_Master.chrActive" class="mtop10" />
                                </div>
                            </div>
                            <label for="inputEmail3" class="col-sm-2 col-form-label" >Lock:</label>
                            <div class="col-sm-3">
                                <input type="checkbox" tabindex="6" id="chkLock" asp-for="login_Master.chrLock" class="mtop10" />
                            </div>
                        </div>
                        <div class="form-group mb-0">
                            <button type="button" id="btnSubmit" tabindex="7" class="btn btn-primary" onclick="return ValidateData()">Save</button>
                            <button type="button" id="btnCancel" tabindex="8" class="btn btn-secondary" onclick="return resetValidation()">Cancel</button>
                        </div>
                        <input type="hidden" asp-for="@Model.login_Master.intGlCode" id="intGlCode" />
                        <input type="hidden" asp-for="@Model.login_Master.chrActive" id="chrActive" />
                        <input type="hidden" asp-for="@Model.login_Master.chrLock" id="chrLock" />
                       @*  <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="submit" class="btn btn-dark">Cancel</button> *@

                    </form>
                </div>
            </div>
        </div>

    </div>
</div>
<br />
<div class="container-fluid" id="container-wrapper">
    <div class="row">
        <!-- DataTable with Hover -->
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">User List</h6>
                    <button type="button" class="btn btn-primary" onclick="ExportExcel();">Download</button>
                </div>
                <div class="table-responsive p-3">
                    @(Html.DevExtreme().DataGrid()
                        .ID("grdUsersList")
                        .ShowBorders(true)
                        .DataSource(ds => ds.Mvc().Controller("Account").Key("intGlCode").LoadAction("GetLoginMasterList"))
                        .Selection(s => s.Mode(SelectionMode.Single))
                        .LoadPanel(f => f.Enabled(false))
                        .Columns(columns =>
                        {
                            columns.Add().DataField("intGlCode").Caption("Edit").Type(GridCommandColumnType.Buttons)
                            .Width(50)
                            .Buttons(b =>
                            {
                                b.Add().Name(GridColumnButtonName.Edit).Visible(true).Icon("edit").OnClick("editdata");

                            });
                            columns.Add().DataField("varUserName").Caption("User Name");
                            columns.Add().DataField("varMobileNo").Caption("Mobile No");
                            columns.Add().DataField("varEmailID").Caption("Email ID");
                            columns.Add().DataField("varPassword").Caption("Password");
                            columns.Add().DataField("chrLock").Caption("Locked");
                            columns.Add().DataField("chrActive").Caption("Status");
                            columns.Add().DataField("dtEntryDate").Caption("Entry Date");
                        })
                        .ColumnAutoWidth(true)
                        .Scrolling(scrolling => scrolling.ColumnRenderingMode(GridColumnRenderingMode.Standard))
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.ShowInfo(true);
                        })
                        .Sorting(sorting => sorting.Mode(DevExtreme.AspNet.Mvc.GridSortingMode.Multiple))
                        .FilterRow(filterRow => filterRow
                        .Visible(true)
                        .ApplyFilter(GridApplyFilterMode.Auto)
                        )
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .WordWrapEnabled(true)
                        )
                </div>
            </div>
        </div>
    </div>

</div>
@Html.AntiForgeryToken()
@section Scripts {
    <script src="~/Scripts/Account/Users.js"></script>
    <script src="~/Scripts/Account/Common.js"></script>
}
