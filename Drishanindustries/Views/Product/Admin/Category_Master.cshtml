@using DevExtreme.AspNet.Mvc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductCataLog.Lib.ViewModels.CategoryMasterViewModel
@{
    ViewData["Title"] = string.Format(Drishanindustries.Common.Common.PageName,  Drishanindustries.Common.Common.AppName,"Category");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" id="container-wrapper">

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <form class="needs-validation" method="post" id="frmCategoryDetail" novalidate>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Category code:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="text" tabindex="1" class="form-control custom_input" maxlength="100" id="txtCategoryCode" asp-for="category_Master.varCatergoryCode" placeholder="Catergory Code">
                                    @Html.ValidationMessageFor(model => model.category_Master.varCatergoryCode, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Category Name:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="text" tabindex="2" class="form-control custom_input" maxlength="100" id="txtCategoryName" asp-for="category_Master.varCatergoryName" placeholder="Catergory Name">
                                    @Html.ValidationMessageFor(model => model.category_Master.varCatergoryName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Parents :</label>
                            <div class="col-sm-3">
                                @(Html.DevExtreme().SelectBox().ID("ddlCategoryList")
                                    .DataSource(d => d.Mvc().Controller("Product").LoadAction("GetCategoryList").Key("intGlCode"))
                                    .DisplayExpr("varCatergoryName")
                                    .ValueExpr("intGlCode")
                                    .Placeholder("-- Select --")
                                    .SearchEnabled(true)
                                    .OnOpened("dxSelectBox_OnOpened ")
                                    )
                            </div>
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Status:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="checkbox" tabindex="3" asp-for="category_Master.chrActive" id="chkchrActive" class="mtop10" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-0">
                            <button type="button" id="btnSave" tabindex="4" class="btn btn-primary" onclick="return ValidateData()">Save</button>
                            <button type="button" id="btnCancel" tabindex="5" class="btn btn-secondary" onclick="return resetValidation()">Cancel</button>
                        </div>
                        <input type="hidden" asp-for="@Model.category_Master.intGlCode" id="intGlCode" />
                        <input type="hidden" asp-for="@Model.category_Master.chrActive" id="chrActive" />
                        <input type="hidden" asp-for="@Model.category_Master.ref_ParentID" id="ref_ParentID" />
                        @* <input type="hidden" asp-for="@Model.varAction" id="Action" /> *@

                    </form>
                </div>

            </div>
        </div>

    </div>
</div>
<br />
<!---Container Fluid-->
<!-- Container Fluid-->
<div class="container-fluid" id="container-wrapper">
    <div class="row">
        <!-- DataTable with Hover -->
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Category List</h6>
                    <button type="button" class="btn btn-primary" onclick="ExportExcel();">Download</button>
                </div>
                <div class="table-responsive p-3">


                    @(Html.DevExtreme().DataGrid()
                        .ID("grdCategoryDetials")
                        .ShowBorders(true)
                        .DataSource(ds => ds.Mvc().Controller("Product").Key("intGlCode").LoadAction("GetCategoryList"))
                        .Selection(s => s.Mode(SelectionMode.Single))
                        .LoadPanel(f => f.Enabled(false))
                        .Columns(columns =>
                        {
                            columns.Add().DataField("intGlCode").Caption("Edit").Type(GridCommandColumnType.Buttons)
                            .Width(50)
                            .Buttons(b =>
                            {
                                b.Add().Name(GridColumnButtonName.Edit).Visible(true).Icon("edit").OnClick("editdata");

                            });
                            columns.Add().DataField("varCatergoryName").Caption("Category Name");
                            columns.Add().DataField("varCatergoryCode").Caption("Category Code");
                            columns.Add().DataField("ParentCatergoryName").Caption("Parent Category");
                            columns.Add().DataField("chrActive").Caption("Status");
                            columns.Add().DataField("dtEntryDate").Caption("Entry Date").Format("yyyy-mm-dd");

                        })
                        .ColumnAutoWidth(true)
                        .Scrolling(scrolling => scrolling.ColumnRenderingMode(GridColumnRenderingMode.Standard))
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.ShowInfo(true);
                        })
                        .Sorting(sorting => sorting.Mode(DevExtreme.AspNet.Mvc.GridSortingMode.Multiple))
                        .FilterRow(filterRow => filterRow
                        .Visible(true)
                        .ApplyFilter(GridApplyFilterMode.Auto)
                        )
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .WordWrapEnabled(true)

                        )
                </div>
            </div>
        </div>
    </div>

</div>

@Html.AntiForgeryToken()
@section Scripts {
    <script src="~/Scripts/Product/Category.js"></script>
    <script src="~/Scripts/Account/Common.js"></script>
}

