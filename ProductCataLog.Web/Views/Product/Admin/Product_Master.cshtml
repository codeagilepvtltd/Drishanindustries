@using DevExtreme.AspNet.Mvc
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ProductCataLog.Lib.ViewModels.ProductMasterViewModel
@{
    ViewData["Title"] = string.Format(ProductCataLog.Web.Common.Common.PageName, ProductCataLog.Web.Common.Common.AppName, "Product");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" id="container-wrapper">

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-6">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Product Entry</h6>
                </div>
                <div class="card-body">
                    <form class="needs-validation" method="post" id="frmProductDetail" novalidate>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Category:</label>
                            <div class="col-sm-4">
                                @(Html.DevExtreme().SelectBox().ID("ddlCategoryList")
                                    .DataSource(d => d.Mvc().Controller("Product").LoadAction("GetProductCategory").Key("intGlCode"))
                                    .DisplayExpr("varCatergoryName")
                                    .ValueExpr("intGlCode")
                                    .Placeholder("-- Select --")
                                    .SearchEnabled(true)
                                    .OnOpened("dxSelectBox_OnOpened ")
                                    )
                            </div>
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Product Code:</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtProductCode" asp-for="product_master.varProductCode" placeholder="Product Code">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Product Name:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="product_master.varProductName" id="txtProductName" placeholder="Product Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Short Description:</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="txtProductShortDescription" asp-for="product_master.varShortDescription" placeholder="Product Short Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Content:</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="txtDescription" asp-for="product_master.varLongDescription" placeholder="Html Content"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Product Price:</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtPRoductPrice" asp-for="product_master.decOriginalPrice" placeholder="Product Price">
                            </div>
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="red">*</span>Display Price:</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" id="txtDisplayPrice" asp-for="product_master.decDisplayPrice" placeholder="Display Name">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">MetaKeyword:</label>
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <input type="text" tabindex="1" class="form-control custom_input" maxlength="100" id="txtMetaKeyword" asp-for="product_master.MetaKeyword" placeholder="MetaKeyword">
                                    @Html.ValidationMessageFor(model => model.product_master.MetaKeyword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">MetaDescription:</label>
                            <div class="col-sm-10">
                                <div class="form-group">
                                    <textarea class="form-control" id="txtMetaDescription" asp-for="product_master.MetaDescription" placeholder="Meta Description"></textarea>
                                    @Html.ValidationMessageFor(model => model.product_master.MetaDescription, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">RankNumber:</label>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input type="text" tabindex="1" class="form-control custom_input" maxlength="100" id="txtRankNumber" asp-for="product_master.RankNumber" placeholder="Rank Number">
                                    @Html.ValidationMessageFor(model => model.product_master.RankNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <label for="inputEmail3" class="col-sm-2 col-form-label">HomePage:</label>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <input type="checkbox" tabindex="3" asp-for="product_master.ShowOnHomePage" id="chkShowOnHomePage" class="mtop10" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputEmail3" class="col-sm-2 col-form-label">Status:</label>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <input type="checkbox" tabindex="3" asp-for="product_master.chrActive" id="chkchrActive" class="mtop10" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-0">
                            <button type="button" id="btnSave" tabindex="4" class="btn btn-primary" onclick="return ValidateData()">Save</button>
                            <button type="button" id="btnCancel" tabindex="5" class="btn btn-secondary" onclick="return resetValidation()">Cancel</button>
                            <button type="button" id="btnAddProductContent" tabindex="5" class="btn btn-secondary" onclick="window.location.href = '@Url.Action("ProductContentMaster", "Product")'">Add Content</button>
                        </div>
                        <input type="hidden" asp-for="@Model.product_master.intGiCode" id="intGiCode" />
                        <input type="hidden" asp-for="@Model.product_master.chrActive" id="chrActive" />
                        <input type="hidden" asp-for="@Model.product_master.ref_CategoryId" id="ref_CategoryId" />
                        <input type="hidden" asp-for="@Model.product_master.ProductPriceID" id="ProductPriceID" />

                    </form>
                </div>

            </div>
        </div>

    </div>
</div>
<br />
<!---Container Fluid-->
<!-- Container Fluid-->
<div class="container-fluid" id="container-wrapper">
    <div class="row">
        <!-- DataTable with Hover -->
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
                    <button type="button" class="btn btn-primary" onclick="ExportExcel();">Download</button>
                </div>
                <div class="table-responsive p-3">
                    @(
                        Html.DevExtreme().DataGrid()
                        .ID("grdProductDetials")
                        .ShowBorders(true)
                        .DataSource(ds => ds.Mvc().Controller("Product").Key("intGiCode").LoadAction("GetProductList"))
                        .Selection(s => s.Mode(SelectionMode.Single))
                        .LoadPanel(f => f.Enabled(false))
                        .Columns(columns =>
                        {
                            columns.Add().DataField("intGiCode").Caption("Edit").Type(GridCommandColumnType.Buttons)
                            .Width(100)
                            .Buttons(b =>
                            {
                                b.Add().Name(GridColumnButtonName.Edit).Visible(true).Icon("edit").OnClick("editproductdata");                                

                            });
                            columns.Add().DataField("intGiCode").Caption("Add Product Image").CellTemplate(new JS("cellTemplate"));
                            columns.Add().DataField("varCatergoryName").Caption("Category Name");
                            columns.Add().DataField("varProductCode").Caption("Product Code");
                            columns.Add().DataField("varProductName").Caption("Product Name");
                            columns.Add().DataField("varShortDescription").Caption("Short Description");
                            columns.Add().DataField("decDisplayPrice").Caption("Display Price");
                            columns.Add().DataField("RankNumber").Caption("Rank");
                            columns.Add().DataField("ShowOnHomePage").Caption("HomePage");
                            columns.Add().DataField("chrActive").Caption("Status");
                            columns.Add().DataField("dtEntryDate").Caption("Entry Date").Format("yyyy-mm-dd");
                        })
                        .ColumnAutoWidth(true)
                        .Scrolling(scrolling => scrolling.ColumnRenderingMode(GridColumnRenderingMode.Standard))
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.ShowInfo(true);
                        })
                        .Sorting(sorting => sorting.Mode(DevExtreme.AspNet.Mvc.GridSortingMode.Multiple))
                        .FilterRow(filterRow => filterRow
                        .Visible(true)
                        .ApplyFilter(GridApplyFilterMode.Auto)
                        )
                        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                        .WordWrapEnabled(true)

                        )
                </div>
            </div>
        </div>
    </div>

</div>
@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/Scripts/Product/Product.js"></script>
    <script src="~/Scripts/Account/Common.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script type="text/javascript">
        $('#txtDescription').summernote({
            placeholder: 'Message',
            tabsize: 2,
            height: 400,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
        function cellTemplate(element, cellInfo) {
            $('<a/>')
                .attr({ href: '@Url.RouteUrl("default", new { action = "ProductContentMaster", controller = "Product" })' + `?href=${cellInfo.data.intGiCode}` })
                .text("Add Product Image")
                .appendTo(element);
        }
    </script>
}

<style>
    .dvdx-overlay-content {
        position: absolute;
        z-index: 1000;
        outline: 0;
        overflow: unset !important;
    }

    .dx-overlay-content.dx-popup-normal.dx-popup-draggable.dx-resizable.dx-dropdowneditor-overlay-flipped {
        overflow: scroll !important;
    }

    .custom-checkbox {
        margin: 40px 0px;
    }
</style>
